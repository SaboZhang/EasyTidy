<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:common="using:EasyTidy.Common"
                    xmlns:converter="using:CommunityToolkit.WinUI.Converters" 
                    xmlns:conv="using:EasyTidy.Converters">

    <conv:EnumDisplayNameConverter x:Key="EnumDisplayNameConverter"/>
    <conv:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />
    <conv:BoolToStringConverter x:Key="BoolToStringConverter" />
    <conv:StringToBoolConverter x:Key="StringToBoolConverter" />
    <conv:LineDashStrokeArrayConverter x:Key="LineDashStrokeArrayConverter" />
    <conv:BoolToEnumConverter x:Key="BoolToEnumConverter"/>
    <conv:EnumToImageConverter x:Key="EnumToImageConverter"/>
    <conv:ValidationEnabledConverter x:Name="CanValidateConverter" />

    <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

</ResourceDictionary>
